<Window x:Class="KnowledgeBase.Views.DiagnosticView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnowledgeBase.Views"
        mc:Ignorable="d"
        Title="DiagnosticView" Height="400" Width="600">
    <Grid>
        <ListView ItemsSource="{Binding Parameters}" Margin="10,30,10,42">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" HorizontalAlignment="Left" Width="auto"/>
                        <TextBlock Text=":  " />
                        <TextBox Text="{Binding ValueString, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" Width="100" />
                        <TextBlock Text=" " />
                        <TextBlock Text="{Binding Unit}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
